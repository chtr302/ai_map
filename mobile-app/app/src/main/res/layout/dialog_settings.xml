<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_theme"
            android:textSize="16sp" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_theme_light"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_theme_dark"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_language"
            android:textSize="16sp" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_vi"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_en"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_ai_thinking"
            android:textSize="16sp" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_ai_thinking_off"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchThinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_ai_thinking_on"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start|top"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/locoai"
            android:scaleType="centerCrop"
            android:contentDescription="Loco AI Avatar" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessage"
            android:background="@drawable/chat_bubble_left"
            android:textColor="@color/chatMessageTextColor"
            android:textSize="16sp"
            android:padding="12dp"
            android:maxWidth="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewPlaces"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Xem địa điểm"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconSize="16dp"
            app:iconTint="@color/colorAccent"
            app:strokeColor="@color/colorAccent"
            app:strokeWidth="1dp"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/cardBackground"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>